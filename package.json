{
  "name": "countr-website",
  "private": true,
  "scripts": {
    "build": "docusaurus build",
    "clear": "docusaurus clear",
    "lint": "eslint ./src ./functions",
    "serve": "docusaurus serve",
    "start": "npm run serve",
    "test": "tsc",
    "watch": "docusaurus start"
  },
  "dependencies": {
    "@docusaurus/core": "^2.0.0-beta.18",
    "@docusaurus/plugin-client-redirects": "^2.0.0-beta.18",
    "@docusaurus/plugin-content-blog": "^2.0.0-beta.20",
    "@docusaurus/plugin-content-docs": "^2.0.0-beta.17",
    "@docusaurus/plugin-content-pages": "^2.0.0-beta.19",
    "@docusaurus/plugin-google-analytics": "^2.0.0-beta.19",
    "@docusaurus/plugin-sitemap": "^2.0.0-beta.18",
    "@docusaurus/theme-classic": "^2.0.0-beta.18",
    "@mdx-js/react": "^1.6.21",
    "clsx": "^1.1.1",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-player": "^2.10.0",
    "wrangler": "^0.0.26"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.8.0",
    "@docusaurus/module-type-aliases": "^2.0.0-beta.18",
    "@docusaurus/types": "^2.0.0-beta.20",
    "@promise/eslint-config": "github:promise/eslint-config",
    "@tsconfig/docusaurus": "^1.0.5",
    "@types/node": "^16.11.31",
    "eslint": "^8.14.0",
    "eslint-plugin-react": "^7.29.4",
    "typescript": "^4.6.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "plugin:react/recommended",
      "@promise"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 13,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-unnecessary-condition": "off",
      "@typescript-eslint/strict-boolean-expressions": "off"
    }
  }
}
